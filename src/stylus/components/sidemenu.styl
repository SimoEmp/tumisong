
.mid__links {
    margin: 0;
    padding: 0;

    .link {
        margin-bottom: 8px;
        display: flex;
        justify-content: flex-end;
        cursor: pointer;

        &:last-child {
            margin: 0;
        }

        .icon--menu {
            position: relative;
            background-color: var(--accent-gold);
            width: 60px;
            height: 4px;
            transform-origin: 50% 50%;

            &::before, &::after {
                content: '';
                position: absolute;
                display: block;
                width: 60px;
                height: 4px;
                background-color: var(--accent-gold);
                transform-origin: 50%;
            }

            &::before {
                transform: translateY(8px);
            }

            &::after {
                transform: translateY(16px);
            }
        }
    }
}

.nav--left {
    position: fixed;
    left: 0;
    width: var(--side-nav-width);
    height: 100%;
    z-index: 9999;
    background-color: var(--secondary);
    text-transform: uppercase;
    transition: var(--anim);
    transition-duration: 0.8s;

    * {
        color: var(--gray);
        transition: var(--anim);
        transition-duration: 0.8s;
    }

    &.nav--opened {
        --side-nav-width: 20vw;
        box-shadow: 0 0 40px 0 rgba(255, 255, 255, 0.08);
        transition: var(--anim);
        transition-property: width, transform, opacity;
        overflow: hidden;

        .nav__span {
            &:first-of-type {
                transform: translateY(-100px);
            }

            &:last-of-type {
                transform: translateY(100px);
            }
        }

        .icon {
            opacity: 0;
            transform: translateX(50px);
        }
    }
}

.nav--left__links {
    position: absolute;
    display: grid;
    top: calc(20%);
    transform: translateX(-40%) rotateY(180deg);
    transform-origin: left;
    background-color: var(--secondary);
    opacity: 1;
}

&.nav--opened .nav--left__links {
    opacity: 1;
    width: var(--side-nav-width);
    transform: translateX(0) rotateX(0deg);
    backface-visibility: visible;
}

.nav--left.nav--opened ~ .main {
    transition: var(--anim);
    animation: defocus 1s linear forwards;
}
