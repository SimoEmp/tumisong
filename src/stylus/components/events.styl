* {
    outline: 1px red solid;
}

.events {

    --head-margin: calc(var(--sect-40-width) / 4 - var(--pad));
    position: relative;
    display: grid;
    grid-auto-flow: column;
    width: var(--main-width);
    height: 25vw;

    align-items: center;
    overflow: hidden;
    overflow-x: scroll;

    scrollbar-track-color: black;
    scroll-snap-y: mandatory;

    margin-left: var(--head-margin);
    padding-left: 1rem;
    &::before{
        content: '';
        position: fixed;
        left: 0;
        top: 0;
        width: 10vw;
        height: 100%;
        background-image: linear-gradient(to right, var(--secondary), rgba(0, 0, 0, 0));
        filter: blur(1px);
    }

}

.event {
    position: relative;
    width: 20vw;
    height: 20vw;
    background-color: green;

    overflow: hidden;
    cursor: pointer;
    box-shadow: 0 0 6px 4px rgba(black, .16);
    transition: var(--prim-anim);
    &:not(:nth-child(1)){
        margin-left: -2rem;
    }
    // --dim-value: .7;
    // &:nth-child(4) ~ .event:not(.event--active){
    //     filter: blur(1px) brightness(var(--dim-value));
    // }
}
.event--active,
.event:focus-within {
    transform: scale(1.1);
    z-index: 1;

    background-color: #fff;
    & ~ *{
        filter: brightness(.8);
    }
}

.event:nth-child(4).event--active{
    margin-left: -10vw;
}