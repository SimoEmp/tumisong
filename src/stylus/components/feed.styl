.feed
    position: absolute;
    width: calc(100% - 30% + var(--pad));
    height: calc(100% - var(--pad) * 2);
    left: calc(34% - var(--pad));
    margin-top: calc(var(--pad));
    z-index: 10;
    display: grid;
    grid-template-columns: 400px 1fr;
    transition: var(--tspeed) all ease-out;
    box-shadow: 0 16px 0 0 var(--secondary);
    &::before
        content ''
        position absolute
        width 100%
        height 100%
        background-color var(--secondary)
        border-bottom none
        border-right none
        background-size cover
        z-index -1
    &__item
        position relative
        background-color var(--gray)
        overflow hidden
        &:hover:nth-of-type(odd)
            border 1px solid var(--accent1)
        &:hover:nth-of-type(1)
            border-top none
        &:hover:nth-of-type(even)
            border-top 1px solid var(--accent1)
            border-bottom 1px solid var(--accent1)
            border-left 1px solid var(--accent1)
        &:hover:nth-of-type(2)
            border-top none
    &__img
        width 100%
        height 100%
        object-fit: cover
    

    &__instagram
        position absolute
        display grid
        grid-template-columns: 400px 1fr;
        background-color green
        width 100%
        height 100%
        z-index 100