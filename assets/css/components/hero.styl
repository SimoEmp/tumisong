
.hero {
  position: relative;
  height: 40vh;
  width: 60vw;
  align-self: flex-end;
  display: flex;
  flex-direction: column;
  margin-left: 40%;
  justify-content: space-between;
  z-index: 2;
}

.hero * {
  color: var(--secondary);
  text-transform: uppercase;
}

.hero__main {
  position relative
  height: 80%;
  width 100%
}
.hero__main .btn {
  position absolute
  bottom 0
}

.hero__main > * {
  margin-bottom: 8px;
}

.hero__head {
  font-family: "druk";
  text-transform: uppercase;
}

.bottom{
    background-image: repeating-linear-gradient(45deg, var(--gray), var(--gray) 6px, var(--secondary) 6px, var(--secondary) 40px);
}
.bgfull{
    background-image url('../images/bg2.jpg')
}
.new{
    display flex
    background-color var(--gray)    
    justify-content space-between
}
.new::before, .new + .gray::before{
  content ''
  position absolute
  width 242px
  height 100%
  // background-image: repeating-linear-gradient(45deg, var(--secondary), var(--secondary) 6px, var(--accent1) 6px, var(--accent1) 40px);
  background-color var(--secondary)
  top 0
  right 0
  bottom 0
  z-index 0   

}
.new > *{
    align-self: center
    z-index 10
    font-weight 400
}
.context{
    width 400px
    margin-left 42px
}
.artist b::after{
  content '___'
}
.song-name{
  font-size 2em
  font-weight bold
  width 200px
  margin-bottom 32px
}
.song-name div{
  background-color var(--secondary)
  color var(--primary)
  margin-bottom 4px
  padding 0 8px
  margin-left -8px
}
.song-name div:last-child{
  width 50%
}
.cover-art{
    position relative
    width 500px
    height 500px
    display flex
    align-items: center
    justify-content space-between
}

.cover-art img{
  width 380px
  height 100%
  object-fit: cover
  box-shadow var(--sh)
}
.cover-art::before{
  content ''
  position absolute
  top 0
  left 0
  width 380px
  height 100%
  background-color rgba(0,0,0,.1)
  left calc(50% - 190px)
  z-index 1
  opacity 0
  transition .4s all ease-out
}
.cover-art:hover::before{
  transition .4s all ease-out
  opacity 1
}
.cover-art:hover::before .play--icon{
  border-color var(--accent1)
  opacity 1
}
.cover-art .icon{
  z-index 999
  cursor pointer
  transition .4s all ease-out
}
.cover-art .icon svg{
  width 100%
  height 100%
}
.cover-art .img::hover{
  filter: grayscale(0%);
}
.cover-art .icon:hover{
  transition .4s all ease-out
}
.nprev, .cnext{
  position relative
  border-radius 50%
  display flex
}
.nprev:hover{
  transform scale(1.2) rotate(90deg)
}
.cnext:hover{
  transform scale(1.2) rotate(-90deg)
}
.nprev{
  transform rotate(90deg)
}
.cnext{
  fill var(--gray)
  transform rotate(-90deg)
}
.nprev::before, .cnext::before{
  content ''
  position absolute
  display block
  width 100%
  height 100%
  border-radius 50%
  background-color rgba(0,0,0, .07)
  z-index -1
  filter: blur(1px)
  transform scale(0)
  box-shadow -1px 1px 10px 1px rgba(255,255,255, .1)
  transition .4s all ease-out
}
.nprev:hover::before, .cnext:hover::before{
  transform scale(1.8)  
  transition .4s all ease-out
}
.tags{
  border-top 1px solid rgba(0,0,0, .3)
  padding-top .5em
}
.genre, .tags{
  margin-bottom 1em
  font-size .9em
  background-color var(--primary)
}
.description, .tags{
  margin-left 2.9em
  margin-bottom 1em
  background-color var(--primary)
}
.description::before{
  content ''
  position absolute
  width 8px
  height 200vh
  margin-top -30%
  transform rotate(-45deg)
  background-color var(--accent1)
  box-shadow 200px -20px 0 0 var(--accent1)
  opacity .4
  z-index -2

}
.play--icon{
  position absolute
  width 50px
  height 50px
  border-radius 50%
  border 4px solid var(--accent1)
  border-bottom-color: var(--secondary)
  left calc(50% - 25px)
  z-index 999
  transform rotateZ('45deg');
  display flex
}
.play--icon::before{
  content ''
  position absolute
  width 40px
  height 40px
  margin auto
  clip-path: polygon(
    0 0, 0 50%, 0 100%
  )
  background-color var(--accent1)
  transform scale(0) translateX(10px)
  z-index 9999
}
.play--icon:hover::before{
  transform scale(1) translateX(10px)  
}
.cover-art .play--icon:hover{
  transform scale(1.5)
  border-color var(--accent)
  border-bottom-color: var(--accent1)
}
.player-widget{
  position relative
  width 100%
  height 5px
  margin-top 2em
  // background-image linear-gradient(
  //   to right,
  //   var(--secondary) ,
  //   var(--gray)
  // ) 
  background-color var(--secondary)
  border-radius 0px
  display flex
  text-align center
}
.player-widget::before{
  content ''
  position absolute
  width 10px
  height 10px
  top 0
  left 0
  background-color var(--secondary)
  border-radius 50%
  margin-top -3px 
  margin-left 20%
  box-shadow var(--sh)
}

.gray{
  background-color var(--gray)
}
.bw-filter{
  filter: grayscale(100%) contrast(120%)  
}