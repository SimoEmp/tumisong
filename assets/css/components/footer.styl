.footer
    position fixed
    bottom calc(var(--bar) * -1)
    background var(--secondary)
    height var(--bar)
    left 0
    right 0
    z-index 9999
    transform translateY(-4px)
    transition var(--prim-anim)
    display grid
    grid-auto-flow: column
    grid-gap: var(--pad)
    justify-content end
    padding 0 var(--pad)
    &__link
        font-size .8em
        display flex
        align-items: center
        color var(--accent1)
