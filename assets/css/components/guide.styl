@import 'components/type'
$h = 2px
:root
    --primary: #fff;
    --secondary: #000;
    --gray: #b9b9b9;
    // --test-1: red;
    // --test-2: orange;
    // --test-3: blue;
    --sect-40-width: calc(var(--side-nav-width) * 2)
    --sect-60-width: calc(100% - var(--sect-40-width) - var(--pad))
    --side-nav-width: 18vw;
    --stripe-height: 40vh;
    --main-width: calc(100% - var(--side-nav-width))
    --deco-bar: calc(var(--bar)/3);
    --bar: 80px;
    --pad: var(--deco-bar);
    --sect-40-width: calc(var(--side-nav-width) * 2);

*
    color var(--secondary)
    
body
    height 100%
    background-color #b9b9b9
    cursor crosshair
.hero__head
    font-family 'druk'