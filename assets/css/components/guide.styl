@import 'components/type'
:root
    --primary: #fff;
    --secondary: #000;
    --gray: #b9b9b9;
    //alternate header
    --twvh: 0
    --after-top: calc(100% - var(--deco-bar)*2)
    --after-left: calc(var(--sect-40-width)/2)
    // --after-top: calc(100% - var(--deco-bar)*3)
    // --after-left: 0
    --twvh: 20vh
    --snug: calc(100% - var(--pad) * 4 - 1em)
    --sect-40-width: calc(var(--side-nav-width) * 2)
    --sect-60-width: calc(100% - var(--sect-40-width) - var(--pad))
    --side-nav-width: 18vw;
    --stripe-height: 40vh;
    --main-width: calc(100% - var(--side-nav-width))
    --deco-bar: calc(var(--bar)/3);
    --bar: 80px;
    --pad: var(--deco-bar);
    --sect-40-width: calc(var(--side-nav-width) * 2);

*
    color var(--secondary)
body
    height 100%
    background-color #000
    cursor crosshair

