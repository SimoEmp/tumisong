.top-nav
    position fixed
    width calc(100% - var(--side-nav-width))
    height 80px
    top 0
    right 0
    padding 0 var(--pad);
    z-index 9999
    display flex
    align-items: center
    justify-content: flex-end
.nav__link
    display flex
    width 100px
    align-items: center
    font-weight bold
.btn
    position relative
    width 204px
    height 50px
    text-transform: uppercase;
    cursor: pointer;
    z-index: 99999;
    background-color transparent
    border 4px solid var(--secondary)
    font-weight normal

.btn--primary 
    background-color: var(--secondary);
    border: none;
    color: var(--gray);
    text-align center
    *
        color var(--gray)
    span
        position absolute
        left 8px
        height 1em
        line-height 1em
        top calc(50% - .5em)



.mid
    position absolute
    width var(--side-nav-width)
    height 400px
    top calc(50% - 200px)
    padding var(--pad)
    display flex
    flex-direction column
    justify-content: center

.mid__links
    margin 0
    padding 0
    .link
        margin-bottom 8px
        display flex
        justify-content: flex-end
        cursor pointer
        &:last-child
            margin 0
        .icon--menu
            position relative
            background-color var(--gray)
            width 54px
            height 4px
            transform-origin: 50%
            &::before, &::after
                content ''
                position absolute
                display block
                width 54px
                height 4px
                background-color var(--gray)
                transform-origin: 50%
            &::before
                transform translateY(8px)
            &::after
                transform translateY(16px)