.top-nav
    position fixed
    width calc(100% - var(--side-nav-width))
    height 80px
    top 0
    right 0
    padding 0 var(--pad);
    z-index 9999
    display flex
    align-items: center
    justify-content: flex-end
.nav__link
    display flex
    width 100px
    padding 4px 8px
    align-items: center
    font-weight bold
.abs--right
    position absolute
    margin-right -1em
    width 400px
    box-sizing border-box
    box-shadow 1em 0 0 0 var(--accent1), -4px 4px 0 0 var(--secondary)
.btn
    position relative
    width 204px
    height 40px
    background-color transparent
    cursor: pointer;
    text-transform: uppercase;
    z-index: 99999;
    font-weight bold
    font-size 1.2em
    font-family Oswald
    display flex
    align-items: center;

.btn--primary 
    background-color: var(--secondary);
    border: none;
    padding 4px 8px
    box-shadow -4px 4px 0 0 var(--secondary)
    &::after
        content: ''
        position absolute
        height 4px
        width 40px
        background-color var(--secondary)
        right 0
        top calc(50% - 2px)
        transform-origin: 50%
        transform translate(1em, -1em) rotate(45deg)
        box-shadow 0 8px 0 0 var(--secondary), 0 -8px 0 0 var(--secondary)

.social
    --h: 30px
    position absolute
    width width = 60px
    height var(--h)
    right 0px
    top calc(50% - var(--h)/2)
    display grid
    grid-template: repeat(3, 6px)/1fr;
    grid-gap: 4px;

    &__icon
        background-color var(--secondary)
        width 100%
.email
    background-color var(--secondary)
    padding 4px
    padding-left 24px
    margin-left 12px
    width 200px

.mid
    position absolute
    width var(--side-nav-width)
    height 400px
    top calc(50% - 200px)
    padding var(--pad)
    display flex
    flex-direction column
    justify-content: center

.mid__links
    margin 0
    padding 0
    .link
        margin-bottom 8px
        display flex
        justify-content: flex-end
        cursor pointer
        &:last-child
            margin 0
        .icon--menu
            position relative
            background-color var(--accent1)
            width 60px
            height 4px
            transform-origin: 50% 50%
            &::before, &::after
                content ''
                position absolute
                display block
                width 60px
                height 4px
                background-color var(--accent1)
                transform-origin: 50%
            &::before
                transform translateY(8px)
            &::after
                transform translateY(16px)
.play--icon{
  position absolute
  width 50px
  height 50px
  display flex
  top calc(50% - 25px)
  left calc(50% - 25px)
  border-radius 50%
  border 4px solid var(--accent1)
  border-bottom-color: var(--secondary)
  z-index 999
  transform rotateZ('45deg');
  transition var(--prim-anim)
}
.play--icon::before{
  content ''
  position absolute
  width 40px
  height 40px
  margin auto
  clip-path: polygon(
    0 0, 0 50%, 0 100%
  )
  background-image var(--accent1-grad)
  transform scale(0) translateX(10px)
  z-index 9999
}
.play--icon:hover::before{
  transform scale(1) translateX(10px)  
}
.play--icon:hover{
  transform scale(1.5)
  border-color var(--accent)
  border-bottom-color: var(--accent1)
}
.play--icon:hover ~ .img{
    transition .8s all ease-out
}