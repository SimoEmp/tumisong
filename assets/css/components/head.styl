.logo
    position relative
    width 135px
    height h = 2em
    line-height h
    background-color #000
    color #fff
    span
        width 50%
        height 3em
        color #000
        background-color #fff
    &::before
        content ''
        position absolute
        width 50%
        height inherit
        z-index -1

.bg
    position absolute
    width 100%
    height 100%
    z-index -1
    background-repeat no-repeat
    object-fit: cover
    filter grayscale(100%) blur(0px) brightness(20%)
.stripe
    position absolute
    width 100vw
    height var(--stripe-height)
    background-color #000
    bottom 0px
    z-index -1
.nav--left
    position absolute
    left 0
    width var(--side-nav-width)
    height 100%
    background-color var(--test-1)
    text-transform uppercase
    border-right 1px solid rgba(0,0,0,0.3)


.split
    position absolute
    width 60px
    height 3px
    top calc(50vh - 9px)
    margin-left var(--pad)
    box-shadow 0 -3px 0 0 var(--secondary), 0 3px 0 0 var(--secondary);


.main
    position absolute
    right 0
    width var(--main-width)
    height 100%
.head
    height 100%

.sect-40
    width w = calc(var(--side-nav-width) * 2)
    height 100%
    display flex
    // border-top var(--deco-bar) solid var(--secondary)
    
    &::after
        content ''
        position absolute
        left w
        right var(--pad)
        top calc(100% - var(--deco-bar))
        bottom 0
        background-color var(--secondary)
        z-index 2
        mix-blend-mode: screen
.nav__span
    position absolute
    width 100%
    height  var(--bar)
    padding var(--pad)
    display flex
    
    &:nth-of-type(2)
        background-color var(--primary)

.icon
    width var(--deco-bar)
    height var(--deco-bar)
    
.col
    position relative
    display flex
    flex-basis 50%
    padding-bottom var(--pad)

.split ~ .bottom
    background-color var(--primary)

.pad--top
    margin-top 2.5em
    *
        align-self: center
    .pad__item
        position relative
        display flex
        padding-right 1em
        .icon
            margin-right 2em
        
    .pad__item:first-child
        font-size .9em
        margin-bottom 25vh

.arrow
        position relative
        margin-left 1.3em
        width 80px
        height $h
        background-color var(--secondary)
.hero
    position absolute
    width 200%
    height 40%
    align-self: flex-end
    display flex
    justify-content space-between
    flex-direction column
    transform translateY(-1em)
    mix-blend-mode: screen
    &__txt
        margin-bottom 1em

    &__main
        height 80%
        margin-top 1.2em
        margin-bottom 0
        font-size .9em
        font-weight 300
.hori
    height 2em
    width 200px
    position relative
    display flex
    align-items: center
    mix-blend-mode: multiply
    .text
        font-weight 400
        color var(--primary)
    &::before
        content ''
        position absolute
        width 50%
        height 100%
        background-color var(--secondary)
        z-index -1
.sect-60
    position absolute
    width calc(100% - var(--sect-40-width) - var(--pad))
    top p = var(--pad)
    right p
    bottom p
    z-index -1

.link
    display flex
    align-items: center
    justify-content space-between
    font-family 'roboto black'
    &__text
        font-size .9em
    &--top-right
        position absolute
        right 0
.right
    position absolute
    right 0px
.mid-top
    margin-top calc(55%)
.r-90
    width 1em
    height 100px
    span
        transform translateX(-1.2em) rotate(-90deg)