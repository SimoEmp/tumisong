.logo
    position relative
    display flex
    padding 4px
    color #fff
    background-color #000
    &::before
                content ''
                position absolute
                width 100%
                height 200%
                margin-left -50%
                margin-top -20%
                z-index -1
                background-image repeating-linear-gradient(
                    45deg,
                    var(--primary),
                    var(--primary) 6px,
                    var(--secondary) 6px,
                    var(--secondary) 40px
                )
    span:first-child
        position relative
        color #fff
        text-shadow -2px -2px 0 #000
.bg
    position absolute
    width 100%
    height 100%
    z-index -1
    background-repeat no-repeat
    object-fit: cover
    filter grayscale(100%) brightness(80%)
    background-size 100px 100px
.nav--left
    position absolute
    left 0
    width var(--side-nav-width)
    height 100%
    background-color black
    text-transform uppercase
    border-right 1px solid rgba(0,0,0,0.3)
    mix-blend-mode: multiply

    *
        color #fff
        fill  #fff

.split
    position absolute
    width 60px
    height 3px
    top calc(50vh - 9px)
    margin-left var(--pad)
    box-shadow 0 -3px 0 0 var(--primary), 0 3px 0 0 var(--primary);


.main
    position absolute
    right 0
    width var(--main-width)
    height 100%
.head
    height 100%

.sect-40
    width w = calc(var(--side-nav-width) * 2)
    height 100%
    display flex
    // border-top var(--deco-bar) solid var(--secondary)
    
    &::after
        content ''
        position absolute
        left w
        right var(--pad)
        top calc(100% - var(--deco-bar)*3)
        bottom 0
        background-color var(--secondary)
        z-index 2
        outline 2px solid white
        box-shadow -4px -4px 0 0 #000
        mix-blend-mode: multiply
.nav__span
    position absolute
    width 100%
    height  var(--bar)
    padding var(--pad)
    display flex
    
    &:nth-of-type(2)
        background-color var(--primary)

.icon
    width var(--deco-bar)
    height var(--deco-bar)
    
.col
    position relative
    display flex
    flex-basis 50%
    padding-bottom var(--pad)

.split ~ .bottom
    background-image repeating-linear-gradient(
        45deg,
        var(--primary),
        var(--primary) 6px,
        var(--secondary) 6px,
        var(--secondary) 30px
    )

.pad--top
    margin-top 2.5em
    *
        align-self: center
    .pad__item
        position relative
        display flex
        padding-right 1em
        .icon
            margin-right 2em
        
    .pad__item:first-child
        font-size .9em
        margin-bottom 25vh

.arrow
        position relative
        margin-left 1.3em
        width 80px
        height $h
        background-color var(--secondary)
.hero
    position absolute
    width 200%
    height 40%
    align-self: flex-end
    display flex
    justify-content space-between
    flex-direction column
    transform translateY(-4em)
    mix-blend-mode: multiply

    
    &__txt
        margin-bottom 1em

    &__main
        height 80%
        margin-top 1.2em
        margin-bottom 0
        font-size .9em
        font-weight 300
.hori
    height 2em
    width 200px
    position relative
    display flex
    align-items: center
    .text
        font-weight 400
        color var(--primary)
    &::before
        content ''
        position absolute
        width 50%
        height 100%
        background-color var(--secondary)
        z-index -1
.sect-60
    position absolute
    width calc(100% - var(--sect-40-width) - var(--pad))
    top p = var(--pad)
    right p
    bottom p
    z-index -1

.link
    display flex
    align-items: center
    justify-content space-between
    font-family 'roboto black'
    &__text
        font-size .9em
    &--top-right
        position absolute
        right 0
.right
    position absolute
    right 0px
.mid-top
    margin-top calc(55%)
.r-90
    width 1em
    height 100px
    span
        transform translateX(-1.2em) rotate(-90deg)

.social
    --h: 100px
    position absolute
    width width = 20px
    height var(--h)
    right 0px
    margin auto 0
    display flex
    flex-direction column
    justify-content space-between
    margin-top calc(50% - var(--h)/2)
    &__icon
        background-color #000
        width 100%
        height 20%
.email
    background-color #000000
    padding 4px
    width 130px
.blur
    position absolute
    width 80vw
    height 60vw
    background-color #fff
    margin 42vh 0 0 55vh 
    
    z-index -1
    opacity .4
    filter blur(1px)
    overflow hidden